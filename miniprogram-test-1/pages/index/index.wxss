/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.searchButton{
  border-color:#aaa;
  margin:20rpx;
  border-width:5rpx;
  border-style:solid;
  border-radius:20%;
  padding:10rpx;
}
.searchContainer{
  display:flex;
  flex-direction:row;
}
.searchInputArea{
  height:100rpx;
  line-height:100rpx;
}
.searchInput{
  height:100rpx;
  line-height:100rpx;
}
.container{
  padding: 0;
  justify-content: flex-start
}
.word_detail{
  font-size:small;
  text-align: left;
  width: 100%;
  display:flex;
  flex-direction: row;
  margin: 10rpx;
  padding-left: 20rpx
}
.wordDetail_abbr{
  width: 80%;
  display: block
}